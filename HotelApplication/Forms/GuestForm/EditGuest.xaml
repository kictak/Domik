<Window x:Class="HotelApplication.Forms.GuestForm.EditGuest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Guest" Height="600" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Name -->
            <RowDefinition Height="Auto" />
            <!-- Middle Name -->
            <RowDefinition Height="Auto" />
            <!-- Last Name -->
            <RowDefinition Height="Auto" />
            <!-- Address -->
            <RowDefinition Height="Auto" />
            <!-- Date of Birth -->
            <RowDefinition Height="Auto" />
            <!-- Document Number -->
            <RowDefinition Height="Auto" />
            <!-- Gender -->
            <RowDefinition Height="Auto" />
            <!-- Document Type -->
            <RowDefinition Height="Auto" />
            <!--Room -->
            <RowDefinition Height="Auto" />
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <TextBlock Text="Имя:" Grid.Row="0" VerticalAlignment="Center" />
        <TextBox x:Name="NameTextBox" Grid.Row="0" Margin="130,0,0,10" />

        <TextBlock Text="Фамилия:" Grid.Row="1" VerticalAlignment="Center" />
        <TextBox x:Name="MiddleNameTextBox" Grid.Row="1" Margin="130,0,0,10" />

        <TextBlock Text="Отчество:" Grid.Row="2" VerticalAlignment="Center" />
        <TextBox x:Name="LastNameTextBox" Grid.Row="2" Margin="130,0,0,10" />

        <TextBlock Text="Адресс:" Grid.Row="3" VerticalAlignment="Center" />
        <TextBox x:Name="AddressTextBox" Grid.Row="3" Margin="130,0,0,10" />

        <TextBlock Text="Дата рождения:" Grid.Row="4" VerticalAlignment="Center" />
        <DatePicker x:Name="BirthDatePicker" Grid.Row="4" Margin="130,0,0,10" />

        <TextBlock Text="Номер документа:" Grid.Row="5" VerticalAlignment="Center" />
        <TextBox x:Name="DocumentNumberTextBox" Grid.Row="5" Margin="130,0,0,10" />

        <TextBlock Text="Пол:" Grid.Row="6" VerticalAlignment="Center" />
        <ComboBox x:Name="GenderComboBox" Grid.Row="6" Margin="130,0,0,10" />

        <TextBlock Text="Тип документа:" Grid.Row="7" VerticalAlignment="Center" />
        <ComboBox x:Name="DocumentTypeComboBox" Grid.Row="7" Margin="130,0,0,10" />

        <TextBlock Text="Комната:" Grid.Row="8" VerticalAlignment="Center" />
        <ComboBox x:Name="RoomComboBox" Grid.Row="8" Margin="130,0,0,10" />

        <StackPanel Orientation="Horizontal" Grid.Row="9" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SaveButton" Content="Save" Width="80" Margin="0,0,10,0" Click="SaveButton_Click" />
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>