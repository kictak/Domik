<Window x:Class="HotelApplication.Forms.GuestForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelApplication.Forms"
        mc:Ignorable="d"
        Title="GuestForm" Height="500" Width="600">
    <DockPanel >

        <DataGrid x:Name="dgRooms" DockPanel.Dock="Top" Height="400" d:ItemsSource="{d:SampleData ItemCount=5}"  Margin="10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="номер комнаты" Binding="{Binding Number}"/>
                <DataGridTextColumn Header="тип комнаты" Binding="{Binding RoomType.Description}"/>
                <DataGridTextColumn Header="цена комнаты за день" Binding="{Binding DayPrice}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Изменить" Margin="10" Click="ShowRoomEdit_Click"/>
            <Button Grid.Column="1" Content="Добавить" Margin="10" Click="AddRoom_Click"/>
            <Button Grid.Column="2" Content="Удалить" Margin="10"/>
        </Grid>

    </DockPanel>
</Window>
