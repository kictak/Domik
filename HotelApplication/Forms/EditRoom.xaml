<Window x:Class="HotelApplication.Forms.EditRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelApplication.Forms"
        mc:Ignorable="d"
        Title="EditRoom" Height="150" Width="400">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Сохранить" Margin="5.5"/>
            <Button Grid.Column="1" Content="Выйти" Margin="5.5"/>
        </Grid>
        <!--<Button  DockPanel.Dock="Bottom"  Height="40">1</Button>
        <Button  DockPanel.Dock="Right" Height="40">1</Button>-->
        <Grid DockPanel.Dock="Top" Height="100">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="300*"/>
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Номер" VerticalAlignment="Center" Height="34" Width="100"/>
            <TextBlock HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Тип комнаты" VerticalAlignment="Center" Height="32" Width="100"/>
            <TextBlock HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="Цена комнаты" VerticalAlignment="Center" Height="33" Width="100"/>
            <ComboBox Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="300" Height="34"/>
            <TextBox Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="300" Height="35"/>
            <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="302" Height="35" Grid.Row="2" Grid.Column="1"/>
        </Grid>
    </DockPanel>
</Window>
